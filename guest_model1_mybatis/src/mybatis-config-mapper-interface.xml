				<property name="username" value="javapython70" />
				<property name="password" value="javapython70" />
			</dataSource>
			-->
		</environment>
	</environments>
	<mappers>
		<!-- 
		<mapper resource="com/itwill/guest/mapper/GuestMapper.xml"/>
		 -->
		 <mapper class="com.itwill.guest.mapper.GuestMapper"/>
	</mappers>
